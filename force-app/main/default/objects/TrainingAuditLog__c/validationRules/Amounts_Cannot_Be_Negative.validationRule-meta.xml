<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Amounts_Cannot_Be_Negative</fullName>
    <active>true</active>
    <errorConditionFormula>OR(MonthlyRent__c < 0, DepositAmount__c < 0, OutstandingAmount__c < 0)</errorConditionFormula>
    <errorDisplayField>Name</errorDisplayField>
    <errorMessage>Amounts cannot be negative.</errorMessage>
</ValidationRule>

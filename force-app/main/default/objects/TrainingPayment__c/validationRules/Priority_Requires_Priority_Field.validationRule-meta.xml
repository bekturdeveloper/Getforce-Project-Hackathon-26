<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Priority_Requires_Priority_Field</fullName>
    <active>true</active>
    <errorConditionFormula>AND($RecordType.Name = 'Priority', ISBLANK(Priority__c))</errorConditionFormula>
    <errorDisplayField>Name</errorDisplayField>
    <errorMessage>Priority is required for Priority records.</errorMessage>
</ValidationRule>
